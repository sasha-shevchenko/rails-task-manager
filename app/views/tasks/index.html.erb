<div class="tasks-dashboard-container">
  <h1>Tasks#display</h1>
  <p>Find me in app/views/tasks/display.html.erb</p>

  <% @tasks.each do |task| %>
    <ul>
      <li><%=link_to task.title, task_path(task)%>
          <%=link_to delete_task_path(task), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fas fa-trash-alt"></i>
          <%end%>
      </li>
    </ul>
  <% end %>

  <%= link_to "add a task", new_task_path %>
</div>
